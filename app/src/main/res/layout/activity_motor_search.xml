<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayoutAboutActivityLayout">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchlayer"
        >



        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="Search"
            android:drawableRight="@mipmap/ic_search_black_48dp"
            android:id="@+id/edtsearch"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnsearch"
            android:text="Search"
            android:background="@drawable/motorbuttonshape"
            android:layout_below="@+id/edtsearch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_below="@id/searchlayer"

      >
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id ="@+id/motorsearch_recycle_view"
            android:paddingTop="10dp"
            android:layout_marginTop="10dp"


             />
        </RelativeLayout>
</RelativeLayout>






