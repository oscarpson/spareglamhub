<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/layerfuel"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewa"
        android:layout_width="match_parent"
        android:layout_height="65dp"
android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:elevation="3dp"
        >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/txtfstation"
        android:hint="Ngara Shell"
        android:textColor="#3e3939"

        android:textSize="18dp"
        android:fontFamily="casual"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/txtfPetrolPrice"
        android:text="89.0"

        android:textColor="#3e3939"

        android:textSize="18dp"
        android:fontFamily="casual"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/txtfstation"
        android:layout_alignTop="@+id/txtfstation" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/txtfDiselPrice"
        android:hint="78.0"
        android:paddingLeft="2dp"
        android:textColor="#ff850a"
        android:textStyle="bold"
        android:textSize="18dp"
        android:fontFamily="casual"
        android:layout_toRightOf="@id/txtfPetrolPrice"
        android:layout_alignTop="@+id/txtfstation"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/txtfParafinPrice"
        android:hint="78.0"
        android:textColor="#3e3939"
        android:paddingRight="4dp"
        android:textSize="18dp"
        android:fontFamily="casual"
        android:layout_alignTop="@id/txtfDiselPrice"
        android:layout_toRightOf="@id/txtfDiselPrice"
        android:layout_alignParentRight="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flat"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flong"
        android:visibility="gone"/>
</RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>