<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="stylist.com.glamhub.myorders.PhotoaddActivity"
    tools:showIn="@layout/activity_photoadd">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/addPhoto"
        android:layout_alignParentLeft="true"
        android:src="@drawable/photos"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="58dp"
        android:paddingTop="20dp"
        android:layout_toRightOf="@id/addPhoto"
        android:background="@drawable/camerag"
        android:layout_marginBottom="10dp"
        android:layout_gravity="left"
        android:paddingRight="20dp"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="3dp"
        app:civ_fill_color="@color/colorAccent"
        android:id="@+id/camerag" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCamera"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="Take a photo"
        android:textColor="@color/blackColor"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/camerag"
        android:layout_toRightOf="@+id/camerag"
        android:layout_toEndOf="@+id/camerag"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="19dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="48dp"
        android:layout_height="58dp"
        android:paddingTop="20dp"
        android:layout_toRightOf="@id/addPhoto"
        android:background="@drawable/photos"
        android:layout_marginBottom="10dp"
        android:layout_gravity="left"
        android:paddingRight="20dp"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="3dp"
        app:civ_fill_color="@color/colorAccent"
        android:layout_below="@id/camerag"
        android:id="@+id/photos" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvphotos"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="photo from gallery"
        android:textColor="@color/blackColor"
        android:textSize="14sp"
        android:layout_alignBottom="@+id/photos"
        android:layout_toRightOf="@+id/photos"
        android:layout_toEndOf="@+id/photos"
        android:layout_marginStart="15dp"

        android:layout_marginBottom="19dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnsendphoto"
        android:layout_below="@+id/addPhoto"

        android:text="Update Photo"/>
</RelativeLayout>
