<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        android:elevation="5dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingRight="10dp"
                android:layout_centerHorizontal="true"

                android:gravity="center_vertical"
                android:textAlignment="center"
                android:id="@+id/txtsparename"
                android:textStyle="bold"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="Gear Box "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txttime"
               android:layout_below="@id/txtsparename"
                android:text=" 08.08.2017 "
                android:layout_centerHorizontal="true"
                android:textColor="@color/gold"

                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imgcarmodel"
                android:layout_below="@id/txtsparename"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_model"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtmodelname"
                android:layout_toRightOf="@id/imgcarmodel"
                android:layout_below="@id/txtsparename"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:textAlignment="gravity"
                android:visibility="gone"
                android:textStyle="bold"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="Harrier H4"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imgnext"
                android:src="@drawable/ic_action_next"
                android:layout_alignParentRight="true"
                />
            <android.support.design.widget.FloatingActionButton
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:foregroundGravity="bottom"
                android:layout_toLeftOf="@id/imgnext"
                android:background="@android:color/transparent"
                android:id="@+id/fViewers"
                android:src="@android:color/transparent"

                />
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="2"
                android:layout_toLeftOf="@id/imgnext"
                android:foregroundGravity="bottom"

                android:textAlignment="center"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="@color/gold"
                android:id="@+id/txtViewers"
                android:elevation="16dp"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imguser"
                android:src="@drawable/ic_photos"
android:visibility="gone"
                android:layout_below="@+id/txttime"
                android:layout_toRightOf="@+id/txtmodelname"
                android:layout_toEndOf="@+id/txtmodelname" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnaddphoto"
            android:visibility="gone"
                android:layout_toRightOf="@id/imguser"
                android:layout_below="@id/txtsparename"
                android:textAlignment="gravity"
                android:gravity="center_vertical"

                android:text="Add Photo"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgcarmodel"

                android:layout_toLeftOf="@id/imgnext"
                android:foregroundGravity="bottom|right"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txttype"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/imgspare"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtorderid"
                android:visibility="gone"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>