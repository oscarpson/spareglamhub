<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_by"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="stylist.com.glamhub.SearchBy">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Vehicle Type"
        android:id="@+id/edtrphone"
        android:textSize="@dimen/textSize"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edit_text"
        android:layout_below="@id/edtremail"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:id="@+id/spnrs"
    android:layout_below="@id/edtrphone">

        <Spinner
        android:layout_width="170dp"
        android:layout_height="40dp"

      android:paddingRight="20dp"
        android:background="@drawable/rounded_edit_text"
        android:id="@+id/spnrgender">

    </Spinner>
    <Spinner
        android:layout_width="150dp"
        android:layout_height="40dp"
android:layout_alignParentRight="true"

        android:background="@drawable/rounded_edit_text"
        android:id="@+id/spnrcost">

    </Spinner>
</RelativeLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_marginTop="21dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="@dimen/textSize"

        android:background="@drawable/motorbuttonshape"
        android:textColor="@color/blackColor"
        android:layout_below="@+id/spnrs"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />
</RelativeLayout>
